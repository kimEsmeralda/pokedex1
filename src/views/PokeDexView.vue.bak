<script setup>
import { ref, computed, onMounted } from "vue";
import { useRouter } from "vue-router";
import { useAuthStore } from "../stores/authStore.js";
import { usePokemonStore } from "../stores/pokemonStore.js";
import { useUserStore } from "../stores/userStore.js";

const router = useRouter();
const authStore = useAuthStore();
const pokemonStore = usePokemonStore();
const userStore = useUserStore();

const activeTab = ref("list");
const searchName = ref("");
const filterType1 = ref("");
const filterType2 = ref("");
const selectedPokemon = ref(null);
const pokemonDetails = ref(null);
const showTeamForm = ref(false);
const showFriendForm = ref(false);
const selectedTeamForManage = ref(null);
const pokemonToAdd = ref("");
const myCode = ref("");
const friendCode = ref("");

const newTeam = ref({
  name: "",
  description: "",
});

onMounted(async () => {
  await pokemonStore.fetchPokemonList();
  await userStore.fetchFavorites();
  await userStore.fetchTeams();
  await userStore.fetchFriends();
});

function logout() {
  authStore.logout();
  router.push("/auth");
}

function getPokemonId(url) {
  return url.split("/").filter(Boolean).pop();
}

function isFavorite(pokemon) {
  const id = getPokemonId(pokemon.url);
  return userStore.favorites.some((f) => f.pokemonId === parseInt(id));
}

async function toggleFavorite(pokemon) {
  const id = getPokemonId(pokemon.url);
  if (isFavorite(pokemon)) {
    await userStore.removeFavorite(id);
  } else {
    await userStore.addFavorite(id, pokemon.name);
  }
}

async function selectPokemon(pokemon) {
  selectedPokemon.value = pokemon;
  try {
    const details = await pokemonStore.fetchPokemonDetails(
      getPokemonId(pokemon.url)
    );
    pokemonDetails.value = details;
  } catch (error) {
    console.error("Error loading details:", error);
  }
}

async function createTeam() {
  if (newTeam.value.name) {
    await userStore.createTeam(newTeam.value.name, newTeam.value.description);
    newTeam.value = { name: "", description: "" };
    showTeamForm.value = false;
  }
}

function selectTeam(team) {
  selectedTeamForManage.value = team;
}

async function addPokemonToSelectedTeam() {
  if (pokemonToAdd.value && selectedTeamForManage.value) {
    await userStore.addPokemonToTeam(
      selectedTeamForManage.value.id,
      parseInt(pokemonToAdd.value),
      `Pokemon-${pokemonToAdd.value}`
    );
    pokemonToAdd.value = "";
  }
}

async function generateMyCode() {
  try {
    myCode.value = await userStore.generateFriendCode();
  } catch (error) {
    alert("Error generando código: " + error);
  }
}

async function addFriend() {
  if (friendCode.value) {
    try {
      await userStore.addFriendByCode(friendCode.value);
      friendCode.value = "";
      showFriendForm.value = false;
    } catch (error) {
      alert("Error agregando amigo: " + error);
    }
  }
}

function goToBattle(friend) {
  router.push(`/battle/${friend.id}`);
}

const filteredPokemon = computed(() => {
  return pokemonStore.pokemonList.filter((p) => {
    const nameMatch = p.name.includes(searchName.value.toLowerCase());
    return nameMatch;
  });
});
</script>

